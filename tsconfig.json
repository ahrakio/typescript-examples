{
	"compilerOptions": {
		"module": "commonjs",
		"baseUrl": "./src",
		"strict": true,
		"outDir": "dist",
		"removeComments": true,
		"experimentalDecorators": true,
		"target": "es6",
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"types": ["node"],
		"typeRoots": ["node_modules/@types"],
		"noImplicitAny": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true
	},

	"exclude": ["node_modules", "dist"],
	"include": ["src/*.ts"]
}
